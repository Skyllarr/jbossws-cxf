    <!-- jboss provided -->
    <dependency>
      <groupId>jboss.common</groupId>
      <artifactId>jboss-common</artifactId>
    </dependency>
    
    <!-- transitve dependencies -->
    <dependency>
      <groupId>com.sun.xml.bind</groupId>
      <artifactId>jaxb-impl</artifactId>
    </dependency>
