        </fileset>
        <fileset dir="@{thirdpartylibs}">
          <patternset refid="client.patternset"/>
        </fileset>
      </copy>
      
      <!-- LIB JARS -->
      <mkdir dir="${deploy.dir}/lib"/>
      <copy todir="${deploy.dir}/lib" overwrite="true">
        <fileset dir="@{thirdpartylibs}">
          <patternset refid="lib.patternset"/>
        </fileset>
