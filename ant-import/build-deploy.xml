  </target>

  <target name="undeploy-jboss423" depends="prepare" description="Remove jbossws/cxf from jboss42">
    <macro-undeploy-cxf423/>
  </target>

  <!-- ================================================================== -->
  <!-- Deployment  JBoss500                                               -->
