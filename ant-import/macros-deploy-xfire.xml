      <delete>
  			<!-- CLIENT JARS -->
        <fileset dir="${jboss422.home}/client">
          <include name="jbossws-spi.jar"/>
        </fileset>
      </delete>
      
      <delete dir="${jboss422.home}/server/${jboss.server.instance}/deploy/jbossws-xfire.sar"/>
